<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#ffebeaec">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to login"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff00de" />

    <requestFocus
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView2" />

    <requestFocus
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/register"
        android:background="#ff009eff"
        android:textColor="#fffffafa"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:background="#ff009eff"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/login"
        android:textColor="#fffff7fd"
        android:layout_below="@+id/register"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rember Password"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/psw"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tianqileixing"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/psw"
        android:background="#fffef9ff"
        android:text="帐号/手机号"
        android:textColor="#ff000000"
        android:selectAllOnFocus="true"
        android:autoText="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/psw"
        android:background="#fffef9ff"
        android:text="密码"
        android:textColor="#ff000000"
        android:layout_below="@+id/tianqileixing"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:selectAllOnFocus="true"
        android:password="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/show9" />

</RelativeLayout>
